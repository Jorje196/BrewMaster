<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--  TODO добавить горизонтальную ориентацию-->
    <ImageView
        android:id="@+id/malt_imageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:contentDescription="Can image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />

    <TextView
        android:id="@+id/malt_veriety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/malt_imageView"

        />
    <TextView
        android:id="@+id/malt_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/malt_veriety"
        />
    <TextView
        android:id="@+id/can_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/malt_properties"
        />
    <TextView
        android:id="@+id/malt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/can_properties"
        />

    <Button
        android:id="@+id/button_fmalt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="NEXT"

        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/malt_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintHorizontal_bias="0.9"
        />
    <Button
        android:id="@+id/button_fmalt_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="PREV"

        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/malt_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintHorizontal_bias="0.1"
        />


</android.support.constraint.ConstraintLayout>