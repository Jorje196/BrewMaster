<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--  TODO исправить горизонтальную ориентацию-->
    <ImageView
        android:id="@+id/malt_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Can image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/malt_veriety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#006aff"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/malt_imageView"
        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:id="@+id/malt_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/malt_imageView"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/malt_veriety"
        />
    <TextView
        android:id="@+id/can_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:textSize="17sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/malt_imageView"
        app:layout_constraintTop_toBottomOf="@+id/malt_properties"
        />

    <TextView
        android:id="@+id/malt_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:paddingLeft="15dp"
        android:paddingRight="5dp"

        android:textSize="17sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/can_properties"
        app:layout_constraintLeft_toRightOf="@+id/malt_imageView"/>

    <Button
        android:id="@+id/button_fmalt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:enabled="true"

        android:text="NEXT"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintLeft_toRightOf="@+id/malt_imageView"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/malt_description" />

    <Button
        android:id="@+id/button_fmalt_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:enabled="true"

        android:text="PREV"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintLeft_toRightOf="@+id/malt_imageView"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/malt_description" />


</android.support.constraint.ConstraintLayout>